<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.testimpedance.MainActivity" >

    <TextView
        android:id="@+id/status_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:text="Ready"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/status_details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/status_content"
        android:text="Press Start to begin collecting data. Make sure the sensor is connected to the headset interface."
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/inner_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/status_details"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="67dp"
        android:layout_toRightOf="@+id/textView1"
        android:onClick="start"
        android:text="Start" />

    <Button
        android:id="@+id/inner_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/inner_start"
        android:layout_alignBottom="@+id/inner_start"
        android:layout_alignLeft="@+id/inner_start"
        android:onClick="stop"
        android:text="Stop"
        android:visibility="invisible" />

    <Button
        android:id="@+id/inner_start_stereo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inner_start"
        android:layout_alignRight="@+id/inner_start"
        android:layout_alignTop="@+id/textView2"
        android:onClick="start_stereo"
        android:text="Start" />

    <Button
        android:id="@+id/inner_stop_stereo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/inner_start_stereo"
        android:layout_alignBottom="@+id/inner_start_stereo"
        android:layout_alignLeft="@+id/inner_start_stereo"
        android:layout_alignRight="@+id/inner_start_stereo"
        android:onClick="stop_stereo"
        android:text="Stop"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView2"
        android:layout_below="@+id/inner_start_stereo"
        android:layout_marginTop="38dp"
        android:text="WAV sine:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/inner_start_wav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inner_start_stereo"
        android:layout_alignTop="@+id/textView3"
        android:onClick="Start_wav"
        android:text="Start" />

    <Button
        android:id="@+id/inner_stop_wav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/inner_start_wav"
        android:layout_alignBottom="@+id/inner_start_wav"
        android:layout_alignLeft="@+id/inner_start_wav"
        android:onClick="Stop_wav"
        android:text="Stop"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inner_start"
        android:layout_marginTop="42dp"
        android:layout_toLeftOf="@+id/inner_start"
        android:text="Stereo_Sine:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/inner_start"
        android:layout_alignLeft="@+id/status_content"
        android:text="Mono_sine:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/offset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/inner_stop"
        android:layout_alignLeft="@+id/textView2"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText1"
        android:layout_alignLeft="@+id/status_content"
        android:text="Input offset value:" />

</RelativeLayout>
